{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$USERPROFILE/*"
        },
        {
          "path": "$HOME/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$USERPROFILE/*"
        },
        {
          "path": "$HOME/*"
        }
      ]
    },
    "shell:default",
    "os:default"
  ]
}