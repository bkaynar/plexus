{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "plexus",
  "version": "0.1.0",
  "identifier": "github.hacimertgokhan.plexus",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Plexus",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/plexus.png",
      "icons/plexus.ico"
    ]
  }
}
